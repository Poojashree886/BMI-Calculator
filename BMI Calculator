   </section>
    <script>
        function calculator()
        {
            var a=document.getElementById("n1")
            var b=document.getElementById("n2")
            var c=Number(a.value)/Number(b.value)**2
            var answer=document.getElementById("ans")
            answer.textContent=c
        }
    </script>
