    <section id="BMI Calculator">
    <div class="cal border border-dark m-3 bg-light">
        <p class="fw-bold h3 m-3">BMI Calculator</p>
    <form>
        <p class="m-3 text-primary fw-bold" >Weight <input type="text" id="n1" placeholder="Weight in kg"></p>
        <p class="m-3 text-primary fw-bold">Height <input type="text" id="n2" placeholder="Height in meters"></p><br>
        <p id="ans">0</p>
        <input type="button" value="Calculate" onclick="calculator()">
    </form>
